{
    "name": "@methodus/codex",
    "version": "0.0.28",
    "author": "nodulusteam",
    "description": "Code visualization tool",
    "type": "commonjs",
    "main": "index.js",
    "bin": {
        "codex": "./dist/cli.js"
    },
    "scripts": {
        "start": "nest start --debug=7071 --watch",
        "build": "nest build && chmod u+x ./dist/cli.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "cli:mindmap": "ts-node ./src/cli.ts mindmap",
        "cli:codemap": "ts-node ./src/cli.ts codemap",
        "cli:flowmap": "ts-node ./src/cli.ts flowmap",
        "cli": "ts-node ./src/cli.ts",
        "ci:build": "yarn && yarn build",
        "bump": "npm version patch --no-push",
        "release": "npm commit-version | exit 0 && npm publish",
        "commit-version": "git add . && git commit -m \"chore(release): publish `node -p 'require(\"./package.json\").version'`\""
    },
    "license": "UNLICENSED",
    "dependencies": {
        "boxen": "5.1.2",
        "chalk": "4.1.2",
        "ejs": "^3.1.9",
        "figlet": "^1.6.0",
        "open": "8.4.2",
        "reflect-metadata": "^0.1.13",
        "ts-morph": "^20.0.0",
        "uniqolor": "^1.1.0"
    },
    "devDependencies": {
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "@nestjs/cli": "^9.2.0",
        "@nestjs/common": "^9.4.0",
        "@nestjs/config": "^2.3.1",
        "@nestjs/core": "^9.4.0",
        "@nestjs/event-emitter": "^1.4.1",
        "@nestjs/platform-express": "^9.4.0",
        "ts-node": "^10.9.1",
        "@types/boxen": "^3.0.1",
        "@types/chalk": "^2.2.0",
        "@types/figlet": "^1.5.6",
        "@nestjs/schematics": "^9.0.4",
        "@nestjs/testing": "^9.3.8",
        "@types/debug": "^4.1.8",
        "@types/ejs": "^3.1.1",
        "@types/express": "^4.17.13",
        "@types/ioredis": "^4.28.10",
        "@types/jest": "^27.0.1",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/node": "^20.8.0",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "eslint": "^7.32.0",
        "prettier": "2.6.2",
        "typescript": "^5.2.2"
    }
}
